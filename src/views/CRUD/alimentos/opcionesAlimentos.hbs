<div class="'col-md-4 mx-auto">
    <div class="card" style="width: 72rem;">
        <div class="'card-header">
            <h3>MENU ALIMENTOS</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <br>
                <!--REGISTER-->
                <form action="/cargarCrearAlimento" method="GET">

                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            CREAR NUEVO PRODUCTO
                        </button>
                    </div>
                </form>
                <!--CONSULT-->
                <form action="/eliminarAlimento" method="POST">
                    <select name="idAlimento" class="form-control" id="ids_ProductType">
                        {{#each result_alimentos}}
                        <option value={{id_alimento}}>{{nombre_alimento}}</option>
                        {{/each}}
                    </select>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            ELIMINAR ALIMENTO
                        </button>
                    </div>
                </form>
                <!--UPDATE-->
                <form action="/cargarModificarAlimento" method="POST">
                    <select name="idAlimento" class="form-control" id="ids_ProductType">
                        {{#each result_alimentos}}
                        <option value={{id_alimento}}>{{nombre_alimento}}</option>
                        {{/each}}
                    </select>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            MODIFICAR ALIMENTO
                        </button>
                    </div>
                </form>
                <form action="/asignarTiempoComida" method="POST">
                    <select name="idAlimento" class="form-control" id="ids_ProductType">
                        {{#each result_alimentos}}
                        <option value={{id_alimento}}>{{nombre_alimento}}</option>
                        {{/each}}
                    </select>
                    <select name="idTiempo" class="form-control" id="ids_ProductType">
                        {{#each resultTiempos}}
                        <option value={{id_tiempo_comida}}>{{nombre_tiempo_comida}}</option>
                        {{/each}}
                    </select><br>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            ASIGNAR TIEMPO COMIDA
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>