<div class="'col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            Actualizar usuario
        </div>
        <div class="card-body">
            <form action="/modificarCliente" method="POST">
                <h5>Solo llene los campos que desea modificar.</h5>
                <input type="hidden" name="idCliente" value={{resultInfoCliente.0.id}}>
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido1" placeholder="Primer apellido"
                        value="{{apellido1}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido2" placeholder="Segundo apellido"
                        value="{{apellido2}}">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="carnet" pattern="/^[0-9]*$/"
                        placeholder="Carnet estudiantil" value="{{carnet}}" />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="cedula" pattern="/^[0-9]*$/" placeholder="Cédula"
                        value="{{cedula}}" />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="edad" pattern="/^[0-9]*$/"
                        placeholder="Edad(En años)" value="{{edad}}" />
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" name="fechanacimiento" min="1900-01-01"
                        value="{{fechanacimiento}}" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" pattern="^[A-Za-z0-9._%+-]+@estudiantec\.cr$"
                        placeholder="Correo electrónico (Debe de ser del dominio estudiantec.cr)" value="{{email}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" minlength="6" name="contrasena" placeholder="Password"
                        value="{{contrasena}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" minlength="6" name="confirm_password"
                        placeholder="Confirm Password" value="{{confirmar_contrasena}}">
                </div>
                <br>
                <button class="btn btn-primary btn-block">
                    Actualizar cliente
                </button>
            </form>
        </div>
    </div>
    <div class="'col-md-4 mx-auto">
        <br>
        <table class="table">
            <h3>INFORMACIÓN ACTUAL DEL CLIENTE</h3>
            <br>
            <thead>
                <tr>
                    <th>Nombre&nbsp;completo</th>
                    <th>Carnet</th>
                    <th>Cedula</th>
                    <th>Fecha&nbsp;de&nbsp;nacimiento</th>
                    <th>Edad</th>
                    <th>Correo</th>
                </tr>
            </thead>
            <tbody id="productTable" class="collection with-header">
                {{#each resultInfoCliente}}
                <tr>
                    <td>{{nombre}} {{primer_apellido}} {{segundo_apellido}}</td>
                    <td>{{carnet}}</td>
                    <td>{{cedula}}</td>
                    <td>{{formatTime fecha_nacimiento "DD-MM-YYYY"}}</td>
                    <td>{{edad}}</td>
                    <td>{{correo}}</td>
                </tr>
                {{/each}}
            </tbody>
    </div>
</div>

<div class="'col-md-4 mx-auto">
    <br>
    <table class="table">
        <h3>PEDIDOS DE ESTE USUARIO</h3>
        <br>
        <thead>
            <tr>
                <th>ID&nbsp;compra</th>
                <th>Fecha&nbsp;compra</th>
                <th>Total en colones</th>
            </tr>
        </thead>

        <tbody id="productTable" class="collection with-header">

            {{#each resultPedidosCliente}}
            <tr>
                <td>{{id_compra}}</td>
                <td>{{formatTime fecha_compra "DD-MM-YYYY"}}</td>
                <td>{{total_compra}}</td>
            </tr>
            {{/each}}

        </tbody>
</div>